    <p class="customer_rank_price_default" id="customer_rank_price_default" style="color: #e32504">
        {% if Product.hasProductClass %}
            {% if Product.CustomerRankPriceMin == Product.CustomerRankPriceMax %}
                {{ Product.CustomerRankPriceIncTaxMin|price }}
